<Window x:Class="BatuLabAiExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BatuLabAiExcel"
        Title="Office Ai - Batu Lab." 
        Height="600" 
        Width="800" 
        MinHeight="400" 
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Window.Resources>
        <!-- Built-in converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Custom value converters -->
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <local:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
        <local:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Key="C" Modifiers="Ctrl+Shift" Command="{Binding CopyAllMessagesCommand}"/>
    </Window.InputBindings>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’»" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Office Ai - Batu Lab." 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#0078D4" 
                       VerticalAlignment="Center"/>
            <TextBlock Text=" - Excel AI Assistant" 
                       FontSize="16" 
                       Foreground="#666666" 
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0"/>
        </StackPanel>
        
        <!-- Chat History -->
        <Border Grid.Row="1" 
                BorderBrush="#E1E1E1" 
                BorderThickness="1" 
                CornerRadius="8"
                Background="White">
            <ScrollViewer x:Name="ChatScrollViewer" 
                          Padding="15">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,15" 
                                    Padding="12,8" 
                                    CornerRadius="8"
                                    Background="{Binding IsUser, Converter={StaticResource BoolToBackgroundConverter}}"
                                    MouseRightButtonUp="MessageBorder_RightClick"
                                    Tag="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Role}" 
                                               FontWeight="SemiBold" 
                                               FontSize="12" 
                                               Foreground="{Binding IsUser, Converter={StaticResource BoolToForegroundConverter}}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Content}" 
                                               TextWrapping="Wrap" 
                                               FontSize="14"
                                               Foreground="{Binding IsUser, Converter={StaticResource BoolToForegroundConverter}}"
                                               x:Name="MessageContent"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                               FontSize="10" 
                                               Foreground="#888888" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ðŸ“‹ Copy Message" 
                                                  Click="CopyMessage_Click"
                                                  Tag="{Binding}"/>
                                        <MenuItem Header="ðŸ“„ Copy Content Only" 
                                                  Click="CopyContent_Click"
                                                  Tag="{Binding}"/>
                                        <Separator/>
                                        <MenuItem Header="ðŸ• Copy with Timestamp" 
                                                  Click="CopyWithTimestamp_Click"
                                                  Tag="{Binding}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Status -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,10,0,0"
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="â³" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding StatusMessage}" 
                       FontStyle="Italic" 
                       Foreground="#0078D4"/>
        </StackPanel>
        
        <!-- File Selection Area -->
        <Border Grid.Row="3" 
                BorderBrush="#E1E1E1" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="#F9F9F9"
                Margin="0,0,0,10"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="Active Excel File:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentFileName}" 
                           FontStyle="Italic" 
                           Foreground="#0078D4" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Button Content="Browse..." 
                        Command="{Binding BrowseFileCommand}"
                        Padding="8,4"
                        MinWidth="80"/>
                <Button Content="Open Folder" 
                        Command="{Binding OpenFolderCommand}"
                        Padding="8,4"
                        MinWidth="80"
                        Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- AI Provider Selection -->
        <Border Grid.Row="4" 
                BorderBrush="#E1E1E1" 
                BorderThickness="1" 
                CornerRadius="4"
                Background="#F5F5F5"
                Margin="0,0,0,10"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ¤–" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="AI Provider:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="AiProviderComboBox"
                          MinWidth="120"
                          SelectedValue="{Binding SelectedAiProvider}"
                          SelectionChanged="AiProviderComboBox_SelectionChanged">
                    <ComboBoxItem Content="Claude" Tag="Claude"/>
                    <ComboBoxItem Content="Gemini" Tag="Gemini"/>
                </ComboBox>
                <TextBlock Text="{Binding CurrentAiProviderStatus}" 
                           FontStyle="Italic" 
                           Foreground="#0078D4" 
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="5" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     x:Name="InputTextBox"
                     Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                     MinHeight="40"
                     MaxHeight="120"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top"
                     Padding="12,8"
                     Margin="0,0,10,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" 
                                Command="{Binding SendCommand}" 
                                Modifiers="Control"/>
                </TextBox.InputBindings>
            </TextBox>
            
            <Button Grid.Column="1" 
                    Content="Send" 
                    Command="{Binding SendCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    VerticalAlignment="Bottom"
                    Height="40"
                    MinWidth="80"
                    Margin="0,0,5,0"/>
                    
            <Button Grid.Column="2" 
                    Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding IsBusy}"
                    VerticalAlignment="Bottom"
                    Height="40"
                    MinWidth="80"
                    Background="#FF6B6B"
                    Foreground="White"/>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <TextBlock Text="ðŸ’¡ Ctrl+Enter: Send â€¢ Click Cancel to stop â€¢ Drag &amp; drop Excel files â€¢ Right-click: Copy" 
                       FontSize="12" 
                       Foreground="#888888" 
                       Margin="0,0,20,0"/>
            <TextBlock Text="ðŸ“Š Excel functions available through AI" 
                       FontSize="12" 
                       Foreground="#888888"/>
        </StackPanel>
    </Grid>
</Window>