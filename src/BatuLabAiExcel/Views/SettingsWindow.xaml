<Window x:Class="BatuLabAiExcel.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BatuLabAiExcel"
        Title="Settings - Office Ai - Batu Lab." 
        Icon="../icon.png"
        Height="600" 
        Width="500" 
        MinHeight="400" 
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Built-in converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>

        <!-- Dark Night Theme Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#06D6A0"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardHoverBrush" Color="#334155"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#475569"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FCD34D"/>
        <SolidColorBrush x:Key="ShadowBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#020617"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF4444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            ShadowDepth="0" 
                            Color="#000000" 
                            Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBrush}" 
                    CornerRadius="12,12,0,0" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="20,0">
                        <TextBlock Text="⚙️" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Settings" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Name="CloseButton"
                            Click="CloseButton_Click"
                            Width="32" 
                            Height="32" 
                            Margin="0,0,15,0"
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="{StaticResource TextSecondaryBrush}"
                            FontSize="16" 
                            Content="✕" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="20">
                <StackPanel>
                    
                    <!-- Default Provider -->
                    <GroupBox Header="Default AI Provider" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              Margin="0,0,0,20">
                        <ComboBox x:Name="ProviderComboBox"
                                  ItemsSource="{Binding AvailableProviders}"
                                  SelectedItem="{Binding SelectedProvider}"
                                  Height="40"
                                  FontSize="14"
                                  Margin="0,10"/>
                    </GroupBox>

                    <!-- Claude API Key -->
                    <GroupBox Header="Claude API Key" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              Margin="0,0,0,20">
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <PasswordBox x:Name="ClaudeApiKeyBox"
                                           Grid.Column="0"
                                           Height="40"
                                           FontSize="14"
                                           PasswordChanged="ClaudeApiKeyBox_PasswordChanged"/>
                                
                                <StackPanel Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="10,0,0,0">
                                    <TextBlock Text="✓" 
                                             Foreground="{StaticResource SuccessBrush}"
                                             FontSize="16"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"
                                             Margin="0,0,5,0"
                                             Visibility="{Binding HasClaudeApiKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <Button Content="Test" 
                                          Style="{StaticResource SecondaryButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Margin="0,0,5,0"
                                          Command="{Binding TestApiKeyCommand}"
                                          CommandParameter="Claude"/>
                                    
                                    <Button Content="Clear" 
                                          Style="{StaticResource DangerButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Command="{Binding ClearApiKeyCommand}"
                                          CommandParameter="Claude"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="Get your API key from https://console.anthropic.com/"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     FontSize="12"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Gemini API Key -->
                    <GroupBox Header="Gemini API Key" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource BorderBrush}">
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <PasswordBox x:Name="GeminiApiKeyBox"
                                           Grid.Column="0"
                                           Height="40"
                                           FontSize="14"
                                           PasswordChanged="GeminiApiKeyBox_PasswordChanged"/>
                                
                                <StackPanel Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="10,0,0,0">
                                    <TextBlock Text="✓" 
                                             Foreground="{StaticResource SuccessBrush}"
                                             FontSize="16"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"
                                             Margin="0,0,5,0"
                                             Visibility="{Binding HasGeminiApiKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <Button Content="Test" 
                                          Style="{StaticResource SecondaryButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Margin="0,0,5,0"
                                          Command="{Binding TestApiKeyCommand}"
                                          CommandParameter="Gemini"/>
                                    
                                    <Button Content="Clear" 
                                          Style="{StaticResource DangerButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Command="{Binding ClearApiKeyCommand}"
                                          CommandParameter="Gemini"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="Get your API key from https://aistudio.google.com/app/apikey"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     FontSize="12"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Groq API Key -->
                    <GroupBox Header="Groq API Key" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource BorderBrush}">
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <PasswordBox x:Name="GroqApiKeyBox"
                                           Grid.Column="0"
                                           Height="40"
                                           FontSize="14"
                                           PasswordChanged="GroqApiKeyBox_PasswordChanged"/>
                                
                                <StackPanel Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="10,0,0,0">
                                    <TextBlock Text="✓" 
                                             Foreground="{StaticResource SuccessBrush}"
                                             FontSize="16"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"
                                             Margin="0,0,5,0"
                                             Visibility="{Binding HasGroqApiKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <Button Content="Test" 
                                          Style="{StaticResource SecondaryButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Margin="0,0,5,0"
                                          Command="{Binding TestApiKeyCommand}"
                                          CommandParameter="Groq"/>
                                    
                                    <Button Content="Clear" 
                                          Style="{StaticResource DangerButtonStyle}"
                                          Width="60"
                                          Height="32"
                                          Command="{Binding ClearApiKeyCommand}"
                                          CommandParameter="Groq"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="Get your API key from https://console.groq.com/keys"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     FontSize="12"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>

            <!-- Status Message -->
            <Border Grid.Row="2" 
                    Background="{StaticResource CardBrush}"
                    Padding="20,10"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,1"
                    Visibility="{Binding IsStatusVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" 
                    Background="{StaticResource CardBrush}" 
                    CornerRadius="0,0,12,12">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="20,0">
                    
                    <Button Content="Save Settings" 
                            Style="{StaticResource ModernButtonStyle}"
                            Width="120"
                            Margin="0,0,10,0"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    
                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>