<Window x:Class="BatuLabAiExcel.Views.SubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BatuLabAiExcel.Views"
        Title="Office AI - Subscription Plans" 
        Icon="/icon.png"
        Height="800" 
        Width="1200" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Dark Night Theme Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="CardBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardHoverBrush" Color="#334155"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#475569"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ShadowBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#020617"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{Binding Color, Source={StaticResource ShadowBrush}}" 
                                    BlurRadius="12" 
                                    ShadowDepth="2" 
                                    Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Popular Plan Card Style -->
        <Style x:Key="PopularCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{Binding Color, Source={StaticResource PrimaryBrush}}" 
                                    BlurRadius="16" 
                                    ShadowDepth="3" 
                                    Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Container -->
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Height="80"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center">
                        <Image Source="/icon.png" 
                               Width="28" 
                               Height="28" 
                               Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Office AI - Subscription Plans" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="20"/>
                            <TextBlock Text="Choose the perfect plan for your needs" 
                                       Foreground="#E0E7FF" 
                                       FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="50" 
                            Height="50" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0"
                            FontSize="18"
                            Click="CloseButton_Click"
                            Style="{x:Null}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="40">
                <StackPanel>
                    <!-- Current License Status -->
                    <Border x:Name="LicenseStatusCard"
                            Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,30"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Current License Status" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="Plan: " 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding LicenseStatusText}" 
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Status: " 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding RemainingTimeText}" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Content="Manage Billing"
                                    Command="{Binding ManageBillingCommand}"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Height="40"
                                    Padding="20,8"/>
                        </Grid>
                    </Border>
                    
                    <!-- Status Messages -->
                    <Border x:Name="ErrorMessageBorder"
                            Background="{StaticResource DangerBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="White"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"/>
                    </Border>
                    
                    <Border x:Name="StatusMessageBorder"
                            Background="{StaticResource AccentBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="White"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Pricing Plans -->
                    <TextBlock Text="Choose Your Plan" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>
                    
                    <!-- Plans Grid -->
                    <ItemsControl ItemsSource="{Binding AvailablePlans}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="15">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPopular}" Value="True">
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="{Binding Color, Source={StaticResource PrimaryBrush}}" 
                                                                            BlurRadius="16" 
                                                                            ShadowDepth="3" 
                                                                            Opacity="0.2"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <StackPanel>
                                        <!-- Popular Badge -->
                                        <Border Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,15">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPopular}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="MOST POPULAR" 
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="11"/>
                                        </Border>
                                        
                                        <!-- Plan Name -->
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="24" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>
                                        
                                        <!-- Price -->
                                        <TextBlock Text="{Binding PriceText}" 
                                                   FontSize="32" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>
                                        
                                        <!-- Description -->
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,20"/>
                                        
                                        <!-- Features List -->
                                        <ItemsControl ItemsSource="{Binding Features}" 
                                                      Margin="0,0,0,30">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding}" 
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   FontSize="14"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Purchase Button -->
                                        <Button Content="{Binding ButtonText}"
                                                Command="{Binding DataContext.PurchaseCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ModernButtonStyle}"
                                                FontSize="16"
                                                FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Loading Indicator -->
                    <StackPanel x:Name="LoadingPanel"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,30,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="⏳" Margin="0,0,12,0" FontSize="16"/>
                        <TextBlock Text="Processing..." 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="16"/>
                    </StackPanel>
                    
                    <!-- Bottom Actions -->
                    <Grid Margin="0,40,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1"
                                Content="Refresh License"
                                Command="{Binding RefreshLicenseCommand}"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                Margin="0,0,15,0"/>
                        
                        <Button Grid.Column="2"
                                Content="Return to App"
                                Click="CloseButton_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource CardHoverBrush}"/>
                    </Grid>
                    
                    <!-- Footer Info -->
                    <TextBlock Text="All plans include full access to AI features, regular updates, and email support. Secure payments processed by Stripe." 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="40,30,40,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>